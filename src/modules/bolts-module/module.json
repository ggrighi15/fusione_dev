{
  "name": "bolts-module",
  "version": "1.0.0",
  "description": "Módulo de Micro-funcionalidades Plugáveis para Automação",
  "author": "Fusione Core System",
  "license": "MIT",
  "main": "index.js",
  "type": "core-module",
  "category": "automation",
  "priority": 9,
  "dependencies": {
    "required": [
      "auth-module",
      "notification-module"
    ],
    "optional": [
      "pessoas-module",
      "contratos-module",
      "compliance-module",
      "contencioso-module",
      "procuracoes-module",
      "societario-module",
      "barcas-module"
    ]
  },
  "permissions": {
    "admin": [
      "bolts:create",
      "bolts:read",
      "bolts:update",
      "bolts:delete",
      "bolts:install",
      "bolts:uninstall",
      "workflows:create",
      "workflows:read",
      "workflows:update",
      "workflows:delete",
      "workflows:execute",
      "triggers:manage_all",
      "marketplace:access",
      "marketplace:publish",
      "bolts:logs",
      "bolts:reports",
      "bolts:config",
      "bolts:debug"
    ],
    "desenvolvedor": [
      "bolts:create",
      "bolts:read",
      "bolts:update",
      "bolts:install",
      "workflows:create",
      "workflows:read",
      "workflows:update",
      "workflows:execute",
      "triggers:create",
      "triggers:update",
      "marketplace:access",
      "marketplace:publish_own",
      "bolts:logs_own",
      "bolts:debug_own"
    ],
    "analista": [
      "bolts:read",
      "workflows:create",
      "workflows:read",
      "workflows:update_own",
      "workflows:execute_own",
      "triggers:create_own",
      "triggers:update_own",
      "marketplace:access",
      "bolts:install_approved",
      "bolts:logs_own"
    ],
    "usuario": [
      "bolts:read_public",
      "workflows:read_own",
      "workflows:execute_own",
      "marketplace:browse",
      "bolts:install_public"
    ],
    "guest": [
      "marketplace:browse_public"
    ]
  },
  "settings": {
    "numeracao": {
      "bolt": {
        "formato": "BLT-AAAA-NNNNNN",
        "sequencial": true,
        "reiniciar_anualmente": true
      },
      "workflow": {
        "formato": "WFL-AAAA-NNNNNN",
        "sequencial": true,
        "reiniciar_anualmente": true
      },
      "execucao": {
        "formato": "EXE-AAAA-NNNNNN",
        "sequencial": true,
        "reiniciar_anualmente": true
      },
      "trigger": {
        "formato": "TRG-AAAA-NNNNNN",
        "sequencial": true,
        "reiniciar_anualmente": true
      }
    },
    "tipos_bolt": {
      "trigger": {
        "nome": "Gatilho",
        "descricao": "Inicia execução baseado em eventos",
        "icone": "play-circle",
        "cor": "#10B981",
        "exemplos": [
          "Novo email recebido",
          "Arquivo modificado",
          "Agendamento de tempo",
          "Webhook recebido"
        ]
      },
      "action": {
        "nome": "Ação",
        "descricao": "Executa uma operação específica",
        "icone": "cog",
        "cor": "#3B82F6",
        "exemplos": [
          "Enviar email",
          "Criar documento",
          "Atualizar banco de dados",
          "Chamar API externa"
        ]
      },
      "condition": {
        "nome": "Condição",
        "descricao": "Avalia condições para controle de fluxo",
        "icone": "question-mark-circle",
        "cor": "#F59E0B",
        "exemplos": [
          "Verificar se valor é maior que X",
          "Validar formato de email",
          "Checar se arquivo existe",
          "Comparar datas"
        ]
      },
      "transformer": {
        "nome": "Transformador",
        "descricao": "Modifica ou processa dados",
        "icone": "switch-horizontal",
        "cor": "#8B5CF6",
        "exemplos": [
          "Converter formato de data",
          "Extrair texto de PDF",
          "Calcular valores",
          "Formatar dados JSON"
        ]
      }
    },
    "categorias_bolt": {
      "comunicacao": {
        "nome": "Comunicação",
        "descricao": "Bolts para envio de mensagens e notificações",
        "icone": "mail",
        "subcategorias": ["email", "sms", "whatsapp", "slack", "teams"]
      },
      "documentos": {
        "nome": "Documentos",
        "descricao": "Processamento e manipulação de documentos",
        "icone": "document",
        "subcategorias": ["pdf", "word", "excel", "ocr", "assinatura"]
      },
      "integracao": {
        "nome": "Integração",
        "descricao": "Conexão com sistemas externos",
        "icone": "link",
        "subcategorias": ["api", "webhook", "ftp", "database", "cloud"]
      },
      "juridico": {
        "nome": "Jurídico",
        "descricao": "Automações específicas para área jurídica",
        "icone": "scale",
        "subcategorias": ["processos", "prazos", "tribunais", "contratos", "compliance"]
      },
      "financeiro": {
        "nome": "Financeiro",
        "descricao": "Automações financeiras e contábeis",
        "icone": "currency-dollar",
        "subcategorias": ["cobranca", "pagamentos", "conciliacao", "impostos", "relatorios"]
      },
      "rh": {
        "nome": "Recursos Humanos",
        "descricao": "Automações de gestão de pessoas",
        "icone": "users",
        "subcategorias": ["admissao", "demissao", "ferias", "ponto", "beneficios"]
      },
      "utilidades": {
        "nome": "Utilidades",
        "descricao": "Ferramentas gerais e utilitários",
        "icone": "wrench",
        "subcategorias": ["data", "texto", "arquivo", "calculo", "validacao"]
      },
      "monitoramento": {
        "nome": "Monitoramento",
        "descricao": "Supervisão e alertas do sistema",
        "icone": "eye",
        "subcategorias": ["logs", "metricas", "alertas", "saude", "performance"]
      }
    },
    "execucao": {
      "timeout_padrao_segundos": 300,
      "timeout_maximo_segundos": 3600,
      "retry_tentativas_padrao": 3,
      "retry_tentativas_maximo": 10,
      "retry_intervalo_padrao": 60,
      "retry_intervalo_maximo": 3600,
      "execucoes_paralelas_maximo": 10,
      "memoria_maxima_mb": 512,
      "cpu_limite_porcentagem": 80,
      "log_nivel_padrao": "info",
      "log_retencao_dias": 90
    },
    "agendamento": {
      "formatos_suportados": [
        "cron",
        "interval",
        "once",
        "daily",
        "weekly",
        "monthly"
      ],
      "timezone_padrao": "America/Sao_Paulo",
      "execucao_perdida_acao": "skip",
      "sobreposicao_execucao": "wait",
      "agendamentos_maximo_por_workflow": 5
    },
    "triggers": {
      "tipos_suportados": {
        "evento": {
          "nome": "Evento do Sistema",
          "descricao": "Responde a eventos internos",
          "configuracao_obrigatoria": ["evento_tipo", "filtros"],
          "configuracao_opcional": ["condicoes", "debounce"]
        },
        "agendamento": {
          "nome": "Agendamento",
          "descricao": "Execução baseada em tempo",
          "configuracao_obrigatoria": ["cron_expression"],
          "configuracao_opcional": ["timezone", "data_inicio", "data_fim"]
        },
        "webhook": {
          "nome": "Webhook",
          "descricao": "Chamada HTTP externa",
          "configuracao_obrigatoria": ["url_endpoint", "metodo"],
          "configuracao_opcional": ["headers", "autenticacao", "validacao"]
        },
        "arquivo": {
          "nome": "Arquivo",
          "descricao": "Modificação de arquivos",
          "configuracao_obrigatoria": ["caminho", "tipo_evento"],
          "configuracao_opcional": ["filtro_extensao", "filtro_tamanho"]
        },
        "email": {
          "nome": "Email",
          "descricao": "Recebimento de emails",
          "configuracao_obrigatoria": ["conta_email", "filtros"],
          "configuracao_opcional": ["pasta", "anexos", "remetente"]
        },
        "api": {
          "nome": "API",
          "descricao": "Chamada de API",
          "configuracao_obrigatoria": ["endpoint", "metodo"],
          "configuracao_opcional": ["headers", "parametros", "autenticacao"]
        }
      },
      "debounce_padrao_ms": 1000,
      "debounce_maximo_ms": 60000,
      "rate_limit_por_minuto": 60,
      "buffer_eventos_maximo": 1000
    },
    "marketplace": {
      "url_api": "https://marketplace.fusione.com.br/api",
      "cache_duracao_horas": 6,
      "auto_update_check": true,
      "auto_update_install": false,
      "categorias_permitidas": [
        "comunicacao",
        "documentos",
        "integracao",
        "juridico",
        "financeiro",
        "rh",
        "utilidades",
        "monitoramento"
      ],
      "avaliacao_minima": 3.0,
      "downloads_minimos": 10,
      "verificacao_seguranca": true,
      "sandbox_execucao": true
    },
    "seguranca": {
      "sandbox": {
        "habilitado": true,
        "memoria_limite_mb": 256,
        "cpu_limite_porcentagem": 50,
        "rede_bloqueada": false,
        "arquivos_permitidos": ["/tmp", "/var/tmp"],
        "comandos_bloqueados": ["rm", "del", "format", "shutdown"]
      },
      "validacao_codigo": {
        "habilitada": true,
        "verificar_sintaxe": true,
        "verificar_vulnerabilidades": true,
        "verificar_malware": true,
        "whitelist_bibliotecas": true
      },
      "assinatura_digital": {
        "obrigatoria": false,
        "verificar_autor": true,
        "verificar_integridade": true,
        "algoritmo": "RSA-SHA256"
      },
      "permissoes": {
        "sistema_arquivos": "restrito",
        "rede": "restrito",
        "banco_dados": "restrito",
        "apis_externas": "permitido",
        "variaveis_ambiente": "negado"
      }
    },
    "monitoramento": {
      "metricas_coleta": {
        "execucoes_por_minuto": true,
        "tempo_resposta": true,
        "uso_memoria": true,
        "uso_cpu": true,
        "taxa_erro": true,
        "taxa_sucesso": true
      },
      "alertas": {
        "execucao_falhando": {
          "threshold": 5,
          "janela_tempo_minutos": 10,
          "acao": "notificar_admin"
        },
        "tempo_resposta_alto": {
          "threshold_segundos": 30,
          "janela_tempo_minutos": 5,
          "acao": "log_warning"
        },
        "uso_memoria_alto": {
          "threshold_porcentagem": 90,
          "acao": "pausar_execucoes"
        },
        "bolt_nao_responsivo": {
          "timeout_segundos": 60,
          "acao": "reiniciar_bolt"
        }
      },
      "logs": {
        "nivel_minimo": "info",
        "incluir_stack_trace": true,
        "incluir_contexto": true,
        "rotacao_tamanho_mb": 100,
        "retencao_dias": 90,
        "compressao": true
      }
    },
    "cache": {
      "habilitado": true,
      "ttl_padrao_segundos": 3600,
      "tamanho_maximo_mb": 512,
      "estrategia_limpeza": "lru",
      "cache_resultados_execucao": false,
      "cache_metadados_bolt": true,
      "cache_configuracoes": true
    },
    "backup": {
      "automatico": true,
      "frequencia": "daily",
      "retencao_dias": 30,
      "incluir_logs": false,
      "incluir_execucoes": true,
      "compressao": true,
      "criptografia": true,
      "destino_remoto": false
    },
    "desenvolvimento": {
      "modo_debug": false,
      "hot_reload": true,
      "editor_integrado": true,
      "versionamento_automatico": true,
      "testes_automaticos": true,
      "documentacao_automatica": true,
      "templates_disponiveis": [
        "trigger_basico",
        "action_api",
        "condition_simples",
        "transformer_dados",
        "workflow_completo"
      ]
    }
  },
  "events": {
    "emitted": [
      "bolt:instalado",
