    ]
  },
  "api": {
    "routes": {
      "bolts": {
        "GET /api/bolts": "listarBolts",
        "GET /api/bolts/:id": "obterBolt",
        "POST /api/bolts": "criarBolt",
        "PUT /api/bolts/:id": "atualizarBolt",
        "DELETE /api/bolts/:id": "removerBolt",
        "POST /api/bolts/install": "instalarBolt",
        "POST /api/bolts/:id/uninstall": "desinstalarBolt",
        "POST /api/bolts/:id/activate": "ativarBolt",
        "POST /api/bolts/:id/deactivate": "desativarBolt",
        "POST /api/bolts/:id/execute": "executarBolt",
        "GET /api/bolts/:id/logs": "obterLogsBolt",
        "GET /api/bolts/:id/stats": "obterEstatisticasBolt"
      },
      "workflows": {
        "GET /api/workflows": "listarWorkflows",
        "GET /api/workflows/:id": "obterWorkflow",
        "POST /api/workflows": "criarWorkflow",
        "PUT /api/workflows/:id": "atualizarWorkflow",
        "DELETE /api/workflows/:id": "removerWorkflow",
        "POST /api/workflows/:id/execute": "executarWorkflow",
        "POST /api/workflows/:id/pause": "pausarWorkflow",
        "POST /api/workflows/:id/resume": "retomarWorkflow",
        "GET /api/workflows/:id/executions": "listarExecucoesWorkflow",
        "GET /api/workflows/:id/logs": "obterLogsWorkflow",
        "GET /api/workflows/:id/stats": "obterEstatisticasWorkflow"
      },
      "execucoes": {
        "GET /api/executions": "listarExecucoes",
        "GET /api/executions/:id": "obterExecucao",
        "POST /api/executions/:id/cancel": "cancelarExecucao",
        "POST /api/executions/:id/retry": "repetirExecucao",
        "GET /api/executions/:id/logs": "obterLogsExecucao",
        "GET /api/executions/:id/steps": "obterPassosExecucao"
      },
      "triggers": {
        "GET /api/triggers": "listarTriggers",
        "GET /api/triggers/:id": "obterTrigger",
        "POST /api/triggers": "criarTrigger",
        "PUT /api/triggers/:id": "atualizarTrigger",
        "DELETE /api/triggers/:id": "removerTrigger",
        "POST /api/triggers/:id/activate": "ativarTrigger",
        "POST /api/triggers/:id/deactivate": "desativarTrigger",
        "POST /api/triggers/:id/test": "testarTrigger"
      },
      "marketplace": {
        "GET /api/marketplace/bolts": "listarBoltsMarketplace",
        "GET /api/marketplace/bolts/:id": "obterBoltMarketplace",
        "POST /api/marketplace/bolts/:id/install": "instalarBoltMarketplace",
        "GET /api/marketplace/categories": "listarCategoriasMarketplace",
        "GET /api/marketplace/featured": "obterBoltsDestaque",
        "GET /api/marketplace/popular": "obterBoltsPopulares",
        "POST /api/marketplace/search": "pesquisarBoltsMarketplace",
        "POST /api/marketplace/bolts/:id/rate": "avaliarBoltMarketplace"
      },
      "templates": {
        "GET /api/templates": "listarTemplates",
        "GET /api/templates/:id": "obterTemplate",
        "POST /api/templates": "criarTemplate",
        "PUT /api/templates/:id": "atualizarTemplate",
        "DELETE /api/templates/:id": "removerTemplate",
        "POST /api/templates/:id/use": "usarTemplate"
      },
      "webhooks": {
        "POST /api/webhooks/:trigger_id": "receberWebhook",
        "GET /api/webhooks/:trigger_id/info": "obterInfoWebhook"
      },
      "logs": {
        "GET /api/logs": "listarLogs",
        "GET /api/logs/:id": "obterLog",
        "DELETE /api/logs": "limparLogs",
        "GET /api/logs/export": "exportarLogs"
      },
      "dashboard": {
        "GET /api/bolts/dashboard": "obterDashboard",
        "GET /api/bolts/stats": "obterEstatisticasGerais",
        "GET /api/bolts/health": "obterSaudeSistema",
        "GET /api/bolts/alerts": "obterAlertas"
      },
      "admin": {
        "GET /api/admin/system/status": "obterStatusSistema",
        "POST /api/admin/system/maintenance": "ativarModoManutencao",
        "POST /api/admin/system/backup": "executarBackup",
