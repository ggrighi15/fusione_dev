{
  "server": {
    "port": 3000,
    "host": "localhost",
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3000", "http://localhost:3001"]
    },
    "helmet": {
      "enabled": true,
      "contentSecurityPolicy": false
    }
  },
  "logging": {
    "level": "info",
    "console": {
      "enabled": true,
      "colorize": true,
      "timestamp": true
    },
    "file": {
      "enabled": false,
      "filename": "logs/fusione-core.log",
      "maxsize": 5242880,
      "maxFiles": 5
    },
    "http": {
      "enabled": true,
      "format": "combined"
    }
  },
  "modules": {
    "autoLoad": true,
    "path": "./src/modules",
    "autoStart": true,
    "loadTimeout": 30000,
    "example-module": {
      "enabled": true,
      "autoStart": true,
      "priority": 1,
      "settings": {
        "interval": 5000,
        "maxRetries": 3,
        "debugMode": false
      }
    }
  },
  "events": {
    "maxListeners": 100,
    "historySize": 1000,
    "enableHistory": true,
    "debugEvents": false,
    "errorHandling": {
      "continueOnError": true,
      "logErrors": true
    }
  },
  "healthCheck": {
    "enabled": true,
    "interval": 30000,
    "timeout": 5000,
    "checks": {
      "memory": {
        "enabled": true,
        "threshold": 0.9
      },
      "uptime": {
        "enabled": true,
        "minUptime": 1000
      },
      "systemLoad": {
        "enabled": true,
        "threshold": 0.8
      }
    }
  },
  "api": {
    "prefix": "/api",
    "rateLimit": {
      "enabled": false,
      "windowMs": 900000,
      "max": 100
    },
    "authentication": {
      "enabled": true,
      "type": "bearer"
    },
    "validation": {
      "enabled": true,
      "strictMode": false
    }
  },
  "system": {
    "name": "Fusione Core System",
    "version": "1.0.0",
    "description": "Sistema central modular para integração e gerenciamento de componentes",
    "environment": "development",
    "timezone": "America/Sao_Paulo",
    "gracefulShutdown": {
      "enabled": true,
      "timeout": 10000
    }
  },
  "security": {
    "trustProxy": false,
    "hidePoweredBy": true,
    "noSniff": true,
    "xssFilter": true,
    "frameguard": {
      "action": "deny"
    }
  },
  "performance": {
    "compression": {
      "enabled": true,
      "level": 6
    },
    "cache": {
      "enabled": false,
      "ttl": 300
    }
  },
  "cache": {
    "enabled": true,
    "host": "localhost",
    "port": 6379,
    "password": null,
    "db": 0,
    "keyPrefix": "fusione:",
    "defaultTTL": 3600,
    "retryAttempts": 3,
    "retryDelay": 1000,
    "connectionTimeout": 5000,
    "commandTimeout": 5000,
    "lazyConnect": true,
    "keepAlive": 30000,
    "family": 4,
    "maxRetriesPerRequest": 3
  },
  "database": {
    "enabled": true,
    "type": "file",
    "host": "localhost",
    "port": 27017,
    "database": "fusione_core",
    "username": "",
    "password": "",
    "authSource": "admin",
    "maxPoolSize": 10,
    "serverSelectionTimeoutMS": 5000,
    "socketTimeoutMS": 45000,
    "options": {
      "retryWrites": true,
      "w": "majority"
    },
    "migrations": {
      "enabled": true,
      "path": "./src/migrations"
    },
    "seeds": {
      "enabled": false,
      "path": "./src/seeds"
    }
  },
  "auth": {
    "jwtSecret": "fusione-jwt-secret-key-change-in-production",
    "jwtExpiration": "24h",
    "refreshTokenExpiration": "7d",
    "saltRounds": 12,
    "rateLimit": {
      "enabled": true,
      "windowMs": 900000,
      "maxAttempts": 5
    },
    "passwordPolicy": {
      "minLength": 8,
      "requireUppercase": true,
      "requireLowercase": true,
      "requireNumbers": true,
      "requireSpecialChars": true
    }
  },
  "websocket": {
    "enabled": true,
    "allowedOrigins": ["http://localhost:3000", "http://localhost:3001"],
    "pingTimeout": 60000,
    "pingInterval": 25000,
    "maxHttpBufferSize": 1000000,
    "transports": ["websocket", "polling"],
    "cors": {
      "methods": ["GET", "POST"]
    },
    "rateLimit": {
      "connectionsPerMinute": 100,
      "eventsPerMinute": 1000
    }
  },
  "performance": {
    "enabled": true,
    "enableRequestTracking": true,
    "enableResponseTimeTracking": true,
    "enableErrorTracking": true,
    "enableCacheOptimization": true,
    "slowRequestThreshold": 1000,
    "enableDetailedLogging": false,
    "monitor": {
      "monitoringInterval": 5000,
      "retentionPeriod": 86400000,
      "enableAlerts": true,
      "enablePredictiveAnalysis": true,
      "alertThresholds": {
        "cpuUsage": 80,
        "memoryUsage": 85,
        "responseTime": 2000,
        "errorRate": 5
      }
    },
    "optimizer": {
      "enableQueryAnalysis": true,
      "enableSmartCache": true,
      "slowQueryThreshold": 1000,
      "cacheHitRateThreshold": 0.8,
      "maxCacheSize": "500MB",
      "queryAnalysisInterval": 300000
    }
  },
  "security": {
    "enabled": true,
    "enableRealTimeMonitoring": true,
    "enableRequestAnalysis": true,
    "enableThreatDetection": true,
    "enableSecurityHeaders": true,
    "rateLimiting": {
      "windowMs": 900000,
      "max": 100,
      "message": "Muitas requisições deste IP, tente novamente em 15 minutos.",
      "standardHeaders": true,
      "legacyHeaders": false
    },
    "securityHeaders": {
      "contentSecurityPolicy": {
        "directives": {
          "defaultSrc": ["'self'"],
          "styleSrc": ["'self'", "'unsafe-inline'"],
          "scriptSrc": ["'self'"],
          "imgSrc": ["'self'", "data:", "https:"]
        }
      },
      "hsts": {
        "maxAge": 31536000,
        "includeSubDomains": true,
        "preload": true
      }
    },
    "threatDetection": {
      "sqlInjectionPatterns": [
        "union.*select",
        "drop.*table",
        "insert.*into",
        "delete.*from",
        "update.*set",
        "exec.*sp_",
        "xp_cmdshell"
      ],
      "xssPatterns": [
        "<script",
        "javascript:",
        "onload=",
        "onerror=",
        "onclick=",
        "eval\\(",
        "document\\.cookie"
      ],
      "pathTraversalPatterns": [
        "\\.\\.\\/",
        "\\.\\.\\\\",
        "\\.\\.%2f",
        "\\.\\.%5c"
      ]
    },
    "auditor": {
      "enablePenetrationTesting": true,
      "enableVulnerabilityScanning": true,
      "enableSecurityMonitoring": true,
      "auditInterval": 3600000,
      "reportPath": "./security-reports",
      "alertThresholds": {
        "criticalVulnerabilities": 1,
        "highVulnerabilities": 5,
        "mediumVulnerabilities": 10,
        "suspiciousActivities": 20,
        "failedLoginAttempts": 10,
        "blockedRequests": 50
      }
    }
  }
}